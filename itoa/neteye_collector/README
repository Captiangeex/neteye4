
#################################################################################
###  Installation of Nats straming server to collect performance data ###########
#################################################################################

# yum --enablerepo=neteye install nats-streaming-server

# Configure Nats input listener
Place nats in /neteye/shared/nats/conf/stan.conf

#Changelog: enable listening of nats on *ALL* interfaces on port 4222
2c2,3
< listen: localhost:4222
---
> #listen: localhost:4222
> listen: :4222



# systemctl start nats-streaming-server.service
# systemctl status nats-streaming-server.service
# systemctl enable nats-streaming-server.service

#################################################################################
### Installation of Telegraf to collect from nats and write to influx   #########
#################################################################################

# yum --enablerepo=neteye install telegraf.x86_64

# Configure Telegraf consumer
Place telegraf.conf to /neteye/shared/telegraf/telegraf.conf


# systemctl start telegraf.service
# systemctl status telegraf.service
# systemctl enable telegraf.service

